{# Enlazar este fichero con la plantilla correspondiente #}
{% extends 'layouts/admin.twig' %}

{% block title %}
  Index producto
{% endblock %}

{% block content %}
  <ul class="nav nav-tabs justify-content-end sizeTab">
    <li class="nav-item">
      <a class="nav-link active" aria-current="page" href="#">Index</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="{{ url }}producto/create">Agregar producto</a>
    </li>
  </ul>

  <!--    Tabla responsive. Hace que puedas hacer scroll horizontal (dependiendo del table-responsive 
  introducido, te permitirá hacer scroll dependiendo del tamaño y cuando se pueda, es decir, cuando empieza
  a comerse contenido a partir de cierto tamaño)    -->
  <div class="table-responsive">
    <table class="table table-striped table-responsive-md table-responsive-sm text-center mt-4 contenedorCentro">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Id_genre</th>
          <th scope="col">Nombre</th>
          <th scope="col">Cantidad</th>
          <th scope="col">Precio</th>
          <th scope="col">Acciones</th>
        </tr>
      </thead>
      <tbody>
        {# Bucle en Twig #}
        {% for p in producto %}
          <tr>
            <td>{{ p.id_producto }}</td>
            <td>{{ p.id_genre }}</td>
            <td>{{ p.nombre }}</td>
            <td>{{ p.cantidad }}</td>
            <td>{{ p.precio }}</td>
            <td>
              <a class="btn btn-success" href="{{ url }}producto/show&id={{ p.id_producto }}">Ver</a>
              <a class="btn btn-secondary" href="{{ url }}producto/edit&id={{ p.id_producto }}">Editar</a>
              <a class="btn btn-danger" href="{{ url }}producto/delete&id={{ p.id_producto }}">Eliminar</a>
            </td>
          </tr>
        {% else %}
          <li>
            <em>No se encuentran productos</em>
          </li>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
