{# Enlazar este fichero con la plantilla correspondiente #}
{% extends 'layouts/users.twig' %}

{% block title %}
  Welcome productos
{% endblock %}

{% block content %}
  <div class="mt-5 container">
    <!-- 3 productos por columna (grande), 1 o 2 producto/s por columna (pequeño) -->
    <div class="row row-cols-3 justify-content-center">
      {# Bucle en Twig #}
      {% for p in producto %}
        <div class="card mt-5 ms-5 text-center cardSize">
          <img src="/2daw-clase/assets/img/game.jpg" class="card-img-top" />
          <div class="card-body">
            <h5 class="card-title">{{ p.nombre }}</h5>
            <h6 class="card-subtitle mb-2 text-muted">Tipo: {{ p.tipo }}</h6>
          </div>
          <!-- Agrupa en una lista la cantidad y el precio -->
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Cantidad: {{ p.cantidad }}</li>
            <li class="list-group-item">Precio: {{ p.precio|number_format(2, '.', ',') }}€</li>
          </ul>

          <div class="text-end">
            <a class="btn btn-warning mt-2 mb-2 me-2 w-50" href="{{ url }}carrito/agregar&id={{ p.id_producto }}">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
                <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
              </svg>

              <span>Comprar</span>
            </a>
          </div>
        </div>
      {% else %}
        <li class="text-center mt-5 mb-5 list-unstyled">
          <em>No se encuentran productos</em>
        </li>
      {% endfor %}
    </div>
  </div>
{% endblock %}
